        <com.xiaopeng.xui.widget.XButton android:enabled="false" android:textSize="28sp" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/btn" android:layout_width="0dp" android:text="提交验证" android:layout_weight="1" style="@style/XButton.Flat.Large.Positive"/>
