    <com.xiaopeng.xui.widget.XTextFields android:layout_gravity="center" android:id="@+id/input_phone_number" android:layout_marginTop="34dp" android:inputType="number" app:input_edit_hint="手机号" app:input_edit_max_length="11" style="@style/XTextFields"/>
    <com.xiaopeng.xui.widget.XRelativeLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
